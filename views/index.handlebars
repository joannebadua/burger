{{!-- //this is the content in the frame (main.handlebars) that is being displayed in the frame --}} --}}
<h1>burgers</h1>
<h2>burgers that have not been devoured</h2>
<ul>
    {{#each burgers }} 
    {{#unless devoured}}
    {{!-- {{>burgers/burger-block devoured=true}} --}}
    {{/unless}}
    <h1>
        burgerName: {{this.name}}
    </h1>
    {{/each}}
</ul>

<h2>burgers that have been devoured</h2>
<form class ="create-form">>
    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
        {{!-- //id bur relevant for on-click, or reference to what the user types. (googlecrome, handlebars, jquery)
        //grab it and shoot it with an ajax call to the back to save on sql. goes in the internet (routes, terminal, db)
        //later goes back to front so the user sees the thing.  --}}
    </div>
    <div class="form-group">
        <label for ="devoured">
            
        </label>
    </div>
</form>
<button id="submit">Add burger</button>

<script>
    $("#submit").on("click", function() {
        console.log("burger we are about to add", $("#bur").val())
        //now nee ajax call - do we have a spot to send the spot? check controller file
        var newBurger = {
            name: $("#bur").val(),
            devoured: false
        }
        $.ajax(
          {
              url: "/burgers",
              //location of where we are shooting the stuff to the backend. check controller /burgers
              type: "POST",
              data: newBurger
          }  
        ).then(function(dataFromBackEnd){
//dataFromBackEnd just a placeholder we can name whatver we want
console.log("datafromback", dataFromBackEnd)
        })
    })
</script>
